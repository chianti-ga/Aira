component AppBox inherits Rectangle {
    background: #10141D80;
    //opacity: 50%;
    border-radius: 25px;
    border-color: #981764;
    border-width: 2px;
    /*drop-shadow-color: #981764;
    drop-shadow-blur: 5px;
    drop-shadow-offset-y: 5px;*/
}
component AppPage inherits GridLayout {
    spacing: 10px;
    padding: 10px;
    @children
    AppBox {
        row: 4;
        colspan: 4;
        VerticalLayout {

            padding: 10px;
            padding-left: 20px;
            padding-right: 20px;
            spacing: 10px;
            height: 100%;

            Text {
            text: @tr("text_console_logs");
            color: white;
            font-size: AppStyle.HEADING-2;
            }

            Rectangle {
                background: #00000080;
                ScrollView {
                    viewport-height: parent.height;
                    console_logs := TextInput {
                        input-type: text;
                        color: white;
                        read-only:true;
                        single-line: false;
                        wrap: word-wrap;
                        text: TextLogic.logs;
                    }
                }
            }
        }
    }

}

