component FileSelection {
    in property<string> text-string;
    in property<string> lineEdit-string;
    callback clicked();
    HorizontalLayout {
        spacing: 10px;

        Text {
        text: text-string;
        color: white;
        vertical-alignment: center;
        }

        path_edit:=LineEdit {
        text: lineEdit-string;
        }

        btn_selec:=Button {
        text: "...";
        clicked => {clicked()}
        }
    }
}

